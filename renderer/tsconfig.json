{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@json/*": [
        "./json/*"
      ],
      "@electron/*": [
        "./electron/*"
      ],
      "@images/*": [
        "./images/*"
      ]
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app"
  ]
}
