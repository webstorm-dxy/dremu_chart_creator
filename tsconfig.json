{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [ "./components/*" ],
      "@public/*": [ "./public/*" ],
      "@styles/*": [ "./styles/*" ],
      "@scripts/*": [ "./scripts/*" ],
      "@interfaces/*": [ "./interfaces/*" ],
      "@json/*": [ "./json/*" ],
      // "@pixi": ["./scripts/utils/pixi/pixi-version.ts"],
      "@images/*": [ "./images/*" ],
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
