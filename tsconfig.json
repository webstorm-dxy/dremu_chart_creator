{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@public/*": [
        "../public/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ],
      "@json/*": [
        "./json/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@images/*": [
        "./images/*"
      ],
      "@md/*": [
        "../public/md/*"
      ]
    },
    "strict": false,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "**/*.ts",
    "**/*.tsx",
    "__test__/recent-chart.test.ts.dis"
  ],
  "exclude": [
    "node_modules",
    "app",
    "src-tauri"
  ]
}