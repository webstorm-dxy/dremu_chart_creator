{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn run build::next && yarn run export::next",
    "beforeDevCommand": "yarn run dev::next",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "reastedit",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/**"]
      },
      "window": {
        "create": true,
        "close": true
      },
      "app": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "games.vestar.astaeus.editor.reastedit",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://raw.githubusercontent.com/hshqwq/Re-AstEdit-update-info/main/update-info.json",
        "https://gitee.com/hshqwq/Re-AstEdit-update-info/raw/main/update-info.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM0QkI1QTVCMzI5NkIxRjYKUldUMnNaWXlXMXE3eEVLd1Z5eXhNWVF3Q01YSkhqY1JFR2RuUHdOMWpkeDZzbGJUQkhybFc5am4K"
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1280,
        "height": 720,
        "resizable": true,
        "title": "Re: AstEdit",
        "center": true,
        "focus": true
      }
    ]
  }
}
